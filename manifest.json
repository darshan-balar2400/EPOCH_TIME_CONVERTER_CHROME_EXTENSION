{
  "manifest_version": 3,
  "name": "Epoch Time Converter",
  "version": "1.0.0",
  "description": "Convert epoch time to various time zones on selection and display in a clean table format.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/logo.png"
  },
  "host_permissions": ["*://*/*"]
}
